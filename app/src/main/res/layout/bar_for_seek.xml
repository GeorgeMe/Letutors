<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="#097cef"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/bar_seek_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:src="@drawable/ic_tab_back" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/bar_seek_title"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:hint="筛选"
            android:layout_marginTop="8dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="@dimen/big_small_text"
            android:background="@drawable/seek_search_bg"
            android:drawableRight="@drawable/seek_search"
            android:textColor="#fff"/>
    </LinearLayout>
    <View
        android:layout_width="48dp"
        android:layout_height="48dp"/>

</LinearLayout>