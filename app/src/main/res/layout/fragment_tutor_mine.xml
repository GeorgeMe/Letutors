<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfdfdf"
    tools:context=".ui.fragment.TutorMineFragment">
    <include layout="@layout/bar_for_mine"/>
    <LinearLayout
        android:id="@+id/mine_sign_out_header"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/mine_sign_out_header_img"
            android:layout_gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/img_head_for_empty" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="请"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="登录/注册"
                    android:textColor="#01a8ef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_logout_header"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/mine_logout_header_img"
            android:layout_gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/img_head_for_empty" />
        <LinearLayout
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mine_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="蒋秋林" />
                <TextView
                    android:id="@+id/mine_job_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（在校学生）" />
                <TextView
                    android:id="@+id/mine_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="女" />
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="常用地址：" />
                <TextView
                    android:id="@+id/mine_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="重庆市渝北区双凤桥街道翔宇路15号" />
            </LinearLayout>
            <LinearLayout
                android:padding="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="一对一：" />
                <TextView
                    android:id="@+id/mine_one_to_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="75￥/小时" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="一对多：" />
                <TextView
                    android:id="@+id/mine_one_to_many"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="40￥/小时" />
            </LinearLayout>
            <RelativeLayout
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="擅长科目：" />
                    <TextView
                        android:id="@+id/mine_good_at_subjects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="12"
                        android:singleLine="true"
                        android:textSize="10sp"
                        android:text="高中英语、高中语文、高中数学、初中..." />
                </LinearLayout>
                <TextView
                    android:id="@+id/mine_modify_data"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="22dp"
                    android:textSize="10sp"
                    android:text="修改资料>" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b7b7b7"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mine_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/my_wallet"
                android:text="我的钱包" />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b7b7b7"/>
        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mine_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/my_order"
                android:text="我的订单" />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b7b7b7"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_evaluation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="我的评价" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7"/>
        <TextView
            android:id="@+id/mine_needs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="我发布的需求" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7"/>
        <TextView
            android:id="@+id/mine_vouchers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="我的代金券" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mine_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="关于我们" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7"/>
        <TextView
            android:id="@+id/mine_switch_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="切换账号" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b7b7b7"/>
        <TextView
            android:id="@+id/mine_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="55dp"
            android:paddingRight="22dp"
            android:drawableRight="@drawable/list_telescopic_more"
            android:text="退出" />
    </LinearLayout>
</LinearLayout>
